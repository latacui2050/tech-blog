{{#if logged_out}}
<meta http-equiv="Refresh" content="0; href='/login'" />
{{/if}}

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<button type="button" class="btn btn-secondary btn-lg add-new-blog">Add New Blog Post</button>

<div class="row mt-4">
  <div class="col-md-8 new-blog-display hide">
    <h3>Create a new blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group mb-3">
        <label for="floatingInput">Blog Title:</label>
        <input class="form-control" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group mb-3">
        <label for="blog-body">Body:</label>
        <textarea class="form-control" id="blog-body" name="blog-body"></textarea>

      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-secondary">Publish</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-4 blog-list">
    <h3>Your Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col">
        <div class="card">
          <div class="card-body fs-5">
            <a href="/blog/{{blog.id}}" class="blog-link">{{blog.title}} </a>
            </div>
          <button class="btn btn-sm btn-danger delete-btn" data-id="{{blog.id}}">Delete Blog</button>
        </div>
      </div>

    </div>
    {{/each}}
  </div>
  {{/if}}
</div>




<script src="./js/dashboard.js"></script>
